      {
        "Name": "File",
        "Args": {
          "path": "./logs/log_.log",
          "rollingInterval": "Day",
          "shared": true,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] {Message:lj} <{ThreadId}>{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "WithThreadId",
      "FromConfiguration",
      "FromLogContext"
    ]
  }
